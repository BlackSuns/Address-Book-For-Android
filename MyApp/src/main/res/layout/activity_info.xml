<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/id_info_avatar"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:src="@drawable/head"
        android:layout_alignParentTop="true"
        android:background="#000000"
        />

    <ImageView
        style="@style/InfoImage"
        android:id="@+id/icon_name"
        android:src="@drawable/acc"
        android:layout_below="@id/id_info_avatar"
        android:layout_marginVertical="10dp"/>

    <TextView
        style="@style/Infos"
        android:id="@+id/id_info_name"
        android:layout_alignTop="@id/icon_name"
        android:layout_toEndOf="@id/icon_name"
        android:text="姓 名"
        />

    <ImageView
        style="@style/InfoImage"
        android:id="@+id/icon_sex"
        android:layout_below="@id/icon_name"
        android:src="@drawable/sex"
        android:layout_marginVertical="10dp"/>
    <TextView
        style="@style/Infos"
        android:id="@+id/id_info_sex"
        android:layout_toEndOf="@id/icon_sex"
        android:layout_alignTop="@id/icon_sex"
        android:text="性 别"
        />

    <ImageView
        style="@style/InfoImage"
        android:id="@+id/icon_phone"
        android:src="@drawable/phone"
        android:layout_below="@id/icon_sex"
        android:layout_marginVertical="10dp"/>
    <TextView
        style="@style/Infos"
        android:id="@+id/id_info_phone"
        android:layout_toEndOf="@id/icon_phone"
        android:layout_alignTop="@id/icon_phone"
        android:text="电话号码" />

    <Button
        android:id="@+id/id_info_call1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/id_info_phone"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="拨号1"
        android:textSize="10sp"
        />

    <ImageView
        style="@style/InfoImage"
        android:id="@+id/icon_phone2"
        android:src="@drawable/phone"
        android:layout_below="@id/icon_phone"
        android:layout_marginVertical="10dp"/>
    <TextView
        style="@style/Infos"
        android:id="@+id/id_info_phone2"
        android:layout_toEndOf="@id/icon_phone2"
        android:layout_alignTop="@id/icon_phone2"
        android:text="电话号码2" />
    <Button
        android:id="@+id/id_info_call2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/id_info_phone2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="拨号2"
        android:textSize="10sp" />

    <ImageView
        style="@style/InfoImage"
        android:id="@+id/icon_qq"
        android:src="@drawable/qq"
        android:layout_below="@id/icon_phone2"
        android:layout_marginVertical="10dp"
        android:contentDescription="TODO" />
    <TextView
        style="@style/Infos"
        android:id="@+id/id_info_qq"
        android:layout_toEndOf="@id/icon_qq"
        android:layout_alignTop="@id/icon_qq"
        android:text="QQ号" />
    <ImageView
        style="@style/InfoImage"
        android:id="@+id/icon_email"
        android:src="@drawable/email"
        android:layout_below="@id/icon_qq"
        android:layout_marginVertical="10dp"/>
    <TextView
        style="@style/Infos"
        android:id="@+id/id_info_email"
        android:text="电子邮件"
        android:layout_toEndOf="@id/icon_email"
        android:layout_alignTop="@id/icon_email"
        />
</RelativeLayout>